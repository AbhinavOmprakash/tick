;; shadow-cljs configuration
{:source-paths
 ["src" "doc/src"]

 :dependencies
 [[cljsjs/js-joda "1.6.2-0"]
  [reagent "0.8.1"]
  [net.cgrand/macrovich "0.2.0"
   :exclusions [org.clojure/clojurescript]]
  [cider/cider-nrepl "0.17.0"]]

 :builds
 {:doc {:target :browser
        :output-dir "doc/js"
        :asset-path "js"
        :modules {:main {:entries [tick.docs.app]}}
        :devtools {:http-root "doc"
                   :http-port 8080}}

  :bootstrap-support
  {:target :bootstrap
   :output-dir "doc/js/bootstrap"
   :exclude #{cljs.js}
   :entries [cljs.js tick.alpha.api]
   :macros []}}}
